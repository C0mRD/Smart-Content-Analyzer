{
  "manifest_version": 3,
  "name": "Highlight and Save Components",
  "version": "1.0",
  "description": "Select and save webpage components as Excel or Word documents",
  "permissions": ["activeTab", "scripting", "downloads", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
